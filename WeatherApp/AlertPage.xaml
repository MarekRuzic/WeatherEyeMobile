<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:nav="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             nav:NavigationPage.HasNavigationBar="False"
             x:Class="WeatherApp.AlertPage"
             Title="AlertPage"
             BackgroundColor="#F3F7FF">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Nadpis -->
            <Label Text="Výstrahy"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#1E293B"
               HorizontalTextAlignment="Center"
               Margin="0,20,0,10"/>

            <!-- Výběr oblasti -->
            <Picker ItemsSource="{Binding Regions}"
                SelectedItem="{Binding SelectedRegion}"
                Title="Vyberte oblast"
                FontSize="18"
                Margin="0,0,0,20"/>

            <!-- Seznam alertů -->
            <CollectionView ItemsSource="{Binding Alerts}"
                        SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Frame Padding="15"
                           Margin="0,0,0,12"
                           BackgroundColor="White"
                           CornerRadius="18"
                           HasShadow="True">

                            <VerticalStackLayout Spacing="10">

                                <!-- HEADER -->
                                <HorizontalStackLayout Spacing="12">

                                    <!-- BAREVNÝ PRUH DLE SEVERITY -->
                                    <BoxView WidthRequest="8"
                                         HeightRequest="45"
                                         VerticalOptions="Center"
                                         Color="{Binding SeverityColor}"
                                         CornerRadius="5"
                                         BackgroundColor="white"/>

                                    <!-- IKONA -->
                                    <Image Source="{Binding Icon}"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       VerticalOptions="Center"/>

                                    <!-- TEXT -->
                                    <VerticalStackLayout Spacing="2" VerticalOptions="CenterAndExpand">
                                        <Label Text="{Binding Event}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#0F172A"/>

                                        <Label Text="{Binding Area}"
                                           FontSize="14"
                                           TextColor="#475569"/>
                                    </VerticalStackLayout>

                                </HorizontalStackLayout>

                                <!-- EXPANDER S IKONOU ŠIPKY -->
                                <toolkit:Expander>

                                    <!-- HEADER EXPANDERU -->
                                    <toolkit:Expander.Header>

                                        <HorizontalStackLayout Spacing="5"
                                                           VerticalOptions="Center"
                                                           Padding="5">

                                            <Label Text="Zobrazit detaily ⬇️"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="#2563EB"
                                               VerticalOptions="Center"/>

                                            <!-- ŠIPKA -->
                                            <Image Source="arrow_down.png"
                                               WidthRequest="20"
                                               HeightRequest="20"
                                               VerticalOptions="Center"/>
                                        </HorizontalStackLayout>

                                    </toolkit:Expander.Header>

                                    <!-- DETAILY -->
                                    <toolkit:Expander.Content>
                                        <VerticalStackLayout Spacing="5" Padding="5">
                                            <BoxView HeightRequest="2"
                                                BackgroundColor="#CBD5E1"
                                                 HorizontalOptions="Fill"/>
                                            <Label Text="{Binding Description}"
                                               FontSize="16"
                                               TextColor="#334155"/>

                                            <Label Text="{Binding Instruction}"
                                               FontSize="15"
                                               TextColor="#1E40AF"
                                               IsVisible="{Binding Instruction, Converter={StaticResource StringNotEmptyConverter}}"/>

                                            <HorizontalStackLayout>
                                                <Label Text="Závažnost: " FontSize="14" FontAttributes="Bold"/>
                                                <Label Text="{Binding Severity}"
                                                            FontSize="14"/>
                                            </HorizontalStackLayout>
                                            <BoxView HeightRequest="1"
                                                    BackgroundColor="#CBD5E1"
                                                    HorizontalOptions="Fill"/>
                                            

                                            <Label Text="{Binding Certainty, StringFormat='Pravděpodobnost: {0}'}"
                                               FontSize="14"/>
                                            <BoxView HeightRequest="1"
                                                    BackgroundColor="#CBD5E1"
                                                    HorizontalOptions="Fill"/>

                                            <Label Text="{Binding Urgency, StringFormat='Naléhavost: {0}'}"
                                               FontSize="14"/>
                                            <BoxView HeightRequest="1"
                                                    BackgroundColor="#CBD5E1"
                                                    HorizontalOptions="Fill"/>

                                            <Label Text="{Binding Onset, StringFormat='Začátek: {0:dd.MM.yyyy HH:mm}'}"
                                               FontSize="14"/>
                                            <BoxView HeightRequest="1"
                                                    BackgroundColor="#CBD5E1"
                                                    HorizontalOptions="Fill"/>

                                            <Label Text="{Binding Expires, StringFormat='Konec: {0:dd.MM.yyyy HH:mm}'}"
                                               FontSize="14"/>
                                        </VerticalStackLayout>
                                    </toolkit:Expander.Content>

                                </toolkit:Expander>

                            </VerticalStackLayout>

                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>