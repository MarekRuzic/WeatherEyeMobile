<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:nav="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             nav:NavigationPage.HasNavigationBar="False"
             x:Class="WeatherApp.MainPage"
             BackgroundColor="#F3F7FF">

    <ScrollView>
        <VerticalStackLayout 
            Padding="20" 
            Spacing="20">

            <!-- NADPIS -->
            <Label Text="Počasí"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#1E293B"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,10"/>

            <!-- COLLECTION VIEW -->
            <CollectionView ItemsSource="{Binding WeatherItems}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Frame Padding="15"
                               Margin="0,0,0,15"
                               CornerRadius="18"
                               HasShadow="True"
                               BackgroundColor="White">

                            <HorizontalStackLayout Spacing="15">

                                <!-- Ikona počasí -->
                                <Image Source="{Binding Icon}"
                                       WidthRequest="50"
                                       HeightRequest="50"/>

                                <!-- Obsah -->
                                <VerticalStackLayout Spacing="3">

                                    <Label Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}"
                                           FontSize="20"
                                           FontAttributes="Bold"/>

                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{Binding TemperatureC, StringFormat='{0} °C'}"
                                               FontSize="14"
                                               TextColor="#0F172A"/>
                                        <Label Text="{Binding TemperatureF, StringFormat='{0} °F'}"
                                               FontSize="14"
                                               TextColor="#64748B"/>
                                    </HorizontalStackLayout>

                                    <Label Text="{Binding Summary}"
                                           FontSize="16"
                                           TextColor="#2563EB"
                                           FontAttributes="Bold"/>

                                </VerticalStackLayout>

                            </HorizontalStackLayout>

                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
