<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.AlertDetailPage"
             BackgroundColor="#F3F7FF"
             Title="Detail upozornění">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- BAREVNÝ HEADER -->
            <Frame CornerRadius="12"
                   Padding="15"
                   HasShadow="True"
                   BackgroundColor="White">

                <HorizontalStackLayout Spacing="18">

                    <!-- BARVA SEVERITY -->
                    <BoxView WidthRequest="10"
                             VerticalOptions="Fill"
                             Color="{Binding SeverityColor}"
                             CornerRadius="5"
                             BackgroundColor="White"/>

                    <!-- IKONA -->
                    <Image Source="{Binding Icon}"
                           WidthRequest="30"
                           HeightRequest="30"
                           VerticalOptions="Center"/>

                    <!-- TEXTY -->
                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">

                        <Label Text="{Binding Event}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#0F172A"                              
                               WidthRequest="500"/>

                        <Label Text="{Binding Severity}"
                               FontSize="16"
                               TextColor="#475569"/>

                        <Label Text="{Binding AreaDesc}"
                               FontSize="14"
                               TextColor="#64748B"/>
                    </VerticalStackLayout>

                </HorizontalStackLayout>
            </Frame>


            <!-- ČASOVÉ ÚDAJE -->
            <Frame CornerRadius="12" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="0">

                    <Label Text="Časové údaje:"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#1E293B"
                           Margin="0,0,0,10"/>


                    <!-- Row 1 -->
                    <Grid ColumnDefinitions="*,*"
                        Padding="0,6">
                        <Label Text="Začátek:" FontSize="16" TextColor="#475569"/>
                        <Label Text="{Binding Onset, StringFormat='{0:dd.MM.yyyy HH:mm}'}" FontSize="14"
                                Grid.Column="1"
                                HorizontalTextAlignment="End"
                                TextColor="#0F172A"/>
                    </Grid>

                    <BoxView HeightRequest="1"
                            BackgroundColor="#E5E7EB"/>

                    <!-- Row 2 -->
                    <Grid ColumnDefinitions="*,*"
                            Padding="0,6">
                        <Label Text="Konec:" TextColor="#475569" FontSize="16"/>
                        <Label Text="{Binding Expires, StringFormat='{0:dd.MM.yyyy HH:mm}'}" FontSize="14"
                                Grid.Column="1"
                                HorizontalTextAlignment="End"
                                TextColor="#0F172A"/>
                    </Grid>

                </VerticalStackLayout>
            </Frame>


            <!-- DETAILY ALERTU -->
            <Frame CornerRadius="12" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Podrobnosti:"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <!-- Row 1 -->
                    <Grid ColumnDefinitions="*,*"
                         Padding="0,0">
                        <Label Text="Určitost:" FontSize="16" TextColor="#475569"/>
                        <Label Text="{Binding Urgency}" FontSize="14"
                            Grid.Column="1"
                            HorizontalTextAlignment="End"
                            TextColor="#0F172A"/>
                    </Grid>

                    <BoxView HeightRequest="1"
                            BackgroundColor="#E5E7EB"/>

                    <!-- Row 1 -->
                    <Grid ColumnDefinitions="*,*"
                            Padding="0,0">
                        <Label Text="Naléhavost:" FontSize="16" TextColor="#475569"/>
                        <Label Text="{Binding Certainty}" FontSize="14"
                                 Grid.Column="1"
                                HorizontalTextAlignment="End"
                                TextColor="#0F172A"/>
                    </Grid>

                    <BoxView HeightRequest="1"
                            BackgroundColor="#E5E7EB"/>

                    <!-- Row 1 -->
                    <Grid ColumnDefinitions="*,*"
                            Padding="0,0">
                        <Label Text="Závažnost:" FontSize="16" TextColor="#475569"/>
                        <Label Text="{Binding Severity}" FontSize="14"
                                Grid.Column="1"
                                HorizontalTextAlignment="End"
                                 TextColor="#0F172A"/>
                    </Grid>                    
                </VerticalStackLayout>
            </Frame>


            <!-- POPIS -->
            <Frame CornerRadius="12" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Popis:"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <Label Text="{Binding Description}"
                           FontSize="15"
                           TextColor="#1E293B"/>
                </VerticalStackLayout>
            </Frame>


            <!-- INSTRUKCE -->
            <Frame CornerRadius="12" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Instrukce:"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <Label Text="{Binding Instruction}"
                           FontSize="15"
                           TextColor="#1E293B"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
