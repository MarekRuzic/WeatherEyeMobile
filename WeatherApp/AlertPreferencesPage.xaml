<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.AlertPreferencesPage"
             x:Name="PageRoot"
             Title="Preference upozornění"
             BackgroundColor="#F3F7FF">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Nadpis + Přidat tlačítko -->
            <HorizontalStackLayout>
                <Label Text="Moje preference"
                       FontSize="30"
                       FontAttributes="Bold"
                       VerticalOptions="CenterAndExpand" />

                <Button Text="+"
                        WidthRequest="48"
                        HeightRequest="48"
                        CornerRadius="4"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        FontSize="26"
                        Clicked="AddPreferenceClicked"/>
            </HorizontalStackLayout>


            <!-- SEZNAM PREFERENCÍ -->
            <CollectionView ItemsSource="{Binding Preferences}"
                            Margin="0,10"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,10"
                               Padding="20"
                               CornerRadius="16"
                               BackgroundColor="White"
                               HasShadow="True">

                            <Grid RowDefinitions="Auto, Auto"
                                  ColumnDefinitions="*, Auto">

                                <!-- Název oblasti -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding areaDesc}"
                                       FontSize="20"
                                       FontAttributes="Bold"/>

                                <!-- Tlačítko Smazat -->
                                <ImageButton Grid.Row="0" Grid.Column="1"
                                             Source="delete_icon.png"
                                             WidthRequest="26"
                                             HeightRequest="26"
                                             BackgroundColor="Transparent"
                                             Command="{Binding BindingContext.DeletePreferenceCommand, Source={x:Reference Name=PageRoot}}"
                                             CommandParameter="{Binding}" />

                                <!-- Notifikační režimy -->
                                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="6" Margin="0,10,0,0">

                                    <HorizontalStackLayout Spacing="6">
                                        <Label Text="Upozornění v aplikaci:"
                                               FontSize="14" />
                                        <Label Text="{Binding inAppNotification}"
                                               FontAttributes="Bold"
                                               FontSize="14"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="6">
                                        <Label Text="Upozornění emailem:"
                                               FontSize="14" />
                                        <Label Text="{Binding emailNotification}"
                                               FontAttributes="Bold"
                                               FontSize="14"/>
                                    </HorizontalStackLayout>

                                </VerticalStackLayout>

                            </Grid>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>